@model List<Toolify.ProductService.Models.Product>
@{
    ViewData["Title"] = "Список товаров";
}

<h1>Список товаров</h1>

<table border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>Id</th>
        <th>Название</th>
        <th>Цена</th>
        <th>Изображение</th>
        <th>Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="/@item.ImagePath" width="100" />
                }
            </td>
            <td>
                <a href="/Admin/Edit/@item.Id">Редактировать</a> |
                <a href="/Admin/Delete/@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/Create">Добавить новый товар</a>
