@model Toolify.ProductService.Models.Product
@{
    ViewData["Title"] = "Добавить товар";
}

<h1>Добавить товар</h1>

<form method="post" enctype="multipart/form-data">
    <p>Название:</p>
    <input type="text" name="Name" value="@Model?.Name" required />

    <p>Описание:</p>
    <textarea name="FullDescription">@Model?.FullDescription</textarea>

    <p>Цена:</p>
    <input type="number" name="Price" value="@Model?.Price" required />

    <p>Изображение:</p>
    <input type="file" name="image" />

    <br /><br />
    <button type="submit">Добавить</button>
</form>
